@{
    ViewData["Title"] = "Dojo Page";
}

<link rel="stylesheet" href="~/css/dojo.css" />

@model DojoLeague.Models.Dojo

<div id="wrapper">
    <div class="row">

        <div class="col" id="col-left">
            <h1>All Dojos</h1>
            <table id="dojo-list-table">
                <tr>
                    <th>Dojo Name</th>
                </tr>
                @{
                    foreach (var dojo in @ViewBag.dojos) {
                        if (@dojo.DojoName != "Rogue") {
                            <tr>
                                <td><a href="/dojos/@dojo.dojo_id">@dojo.DojoName</a></td>
                            </tr>
                        }
                    }
                }
            </table>
        </div>

        <div class="col" id="col-right">
            <h1>Register A Dojo</h1>
            <form id="dojo-form" action="AddDojo" method="POST">
                <div class="input-div">
                    <label asp-for="DojoName" class="input-label">Dojo Name</label>
                    <input asp-for="DojoName" class="input">
                </div>
                <div class="input-div">
                    <label asp-for="DojoLocation" class="input-label">Dojo Location</label>
                    <input asp-for="DojoLocation" class="input">
                </div>
                <div class="input-div">
                    <label asp-for="DojoInfo" class="input-label">Additional Dojo Information</label>
                    <textarea asp-for="DojoInfo" id="information"></textarea>
                </div>
                <div id="submit-div">
                    <input type="submit" value="Add">
                </div>
            </form>

        </div>
        
    </div>
</div>