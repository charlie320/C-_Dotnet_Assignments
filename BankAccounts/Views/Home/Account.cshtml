<link rel="stylesheet" href="~/css/account.css">

@model BankAccounts.Models.Transaction

<div id="account-header">
    <h1>Welcome, @ViewBag.RetrievedUser.FirstName</h1>
    <div id="account-balance-div">
        <label>Current Balance:</label>
        <span>$ @ViewBag.RetrievedUser.AccountBalance.ToString("0.00")</span>
    </div>
</div>

<form action="CreateTransaction" method="POST">
    <label asp-for="Amount">Deposit/Withdraw:</label>
    <input asp-for="Amount" id="dep-wd" name="Amount" type="number">
    <input type="submit" value="Submit">
</form>

<div>
    @ViewBag.InvalidTransaction
</div>

<table>
    <tr>
        <th>Amount</th>
        <th>Date</th>
    </tr>

    @{
        foreach (var transaction in @ViewBag.ReturnedTransactions) {
            <tr>
                <td>$ @transaction.Amount.ToString("0.00")</td>
                <td>@transaction.created_at.ToString("MMM dd, yyyy")</td>
            </tr>
        }
    }

</table>