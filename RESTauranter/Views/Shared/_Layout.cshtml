<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RESTauranter</title>
    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>RESTaurant - Eating Establishment Reviews</h1>
         <img src="/images/brenan-greene-229561.jpg">
    </header>
    <nav>
        <a href="index">Write a Review</a>
        <a href="reviews">All Reviews</a>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <p>C# project by Jesus C. de la Rosa</p>
        <p>Created using ASP.NET Core 2.0</p>
        <p>Image courtesy of Brenan Greene and Unsplash</p>
    </footer>
        
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.js"
                asp-fallback-test="window.jQuery">
        </script>
        
        
        <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
